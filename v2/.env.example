# Platform Engineering API Server Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Azure Configuration
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-default-azure-subscription-id

# GitHub Configuration
GITHUB_TOKEN=ghp_your-github-personal-access-token

# Terraform Cloud Configuration
TERRAFORM_CLOUD_TOKEN=your-terraform-cloud-api-token
TERRAFORM_ORGANIZATION=your-terraform-organization

# Prometheus/Monitoring
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_API_KEY=your-grafana-api-key

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Database (if using one)
DATABASE_URL=postgresql://username:password@localhost:5432/platform_tools

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/platform-api.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4000,https://mustafazeya.github.io,https://your-domain.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Features Flags
ENABLE_AWS_INTEGRATION=true
ENABLE_AZURE_INTEGRATION=true
ENABLE_GITHUB_INTEGRATION=true
ENABLE_TERRAFORM_INTEGRATION=true
ENABLE_PROMETHEUS_INTEGRATION=true

# Security Headers
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# API Versions
API_VERSION=v1

# External Services
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/your-webhook

# Monitoring and Alerting
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
DATADOG_API_KEY=your-datadog-api-key

# Cache Settings
CACHE_TTL_GITHUB=300
CACHE_TTL_AWS_COSTS=1800
CACHE_TTL_AZURE_COSTS=1800
CACHE_TTL_PROMETHEUS=60

# Development/Testing
MOCK_DATA_ENABLED=false
DEBUG_MODE=false
